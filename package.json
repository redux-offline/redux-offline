{
  "name": "redux-offline",
  "version": "2.0.0",
  "description": "Redux Offline-First Architecture",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel src --out-dir lib --ignore **/__tests__/**",
    "flow:start": "flow server",
    "flow:stop": "flow stop",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "lint": "eslint src/",
    "prepublish": "npm run lint && npm run flow && npm run test && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "watch": "npm run build -- --watch"
  },
  "jest": {
    "rootDir": "src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jevakallio/redux-offline.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jevakallio/redux-offline/issues"
  },
  "homepage": "https://github.com/jevakallio/redux-offline#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.8",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.19.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "eslint": "^3.17.1",
    "eslint-config-formidable": "^2.0.1",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-filenames": "^1.1.0",
    "eslint-plugin-import": "^2.2.0",
    "flow-bin": "^0.42.0",
    "jest": "^19.0.2",
    "react": "^15.4.2",
    "redux": "^3.6.0",
    "redux-logger": "^2.8.2"
  },
  "dependencies": {
    "redux-persist": "^4.5.0"
  },
  "peerDependencies": {
    "redux": ">=3"
  }
}
